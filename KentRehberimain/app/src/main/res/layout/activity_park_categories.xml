<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    tools:context=".Categories.ParkCategories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/general_back_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/general_search_icon"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/featured_image2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/dingiloglu_park"
            android:scaleType="centerCrop"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/featured_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şevket Dingiloğlu Parkı"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-medium"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4.6"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/featured_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Herkesin faydalanıp dinlenebildiği bir park alanı.."/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/comment"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:hint="Yorum Yazınız:"
                android:inputType="text"
                android:textColor="@color/black">
            </EditText>
            <Button
                android:id="@+id/commentBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/comment2">

            </Button>


        </RelativeLayout>
        <ImageView
            android:id="@+id/featured_image3"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/ahmetpasa_park"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/featured_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahmet Cevdet Paşa Parkı"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-medium"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4.6"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/featured_desc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sakin sessiz yeşillikler arasında;
çayınızı kahvenizi yudumlarken günün yorgunluğunu atabilirsiniz."/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/comment"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:hint="Yorum Yazınız:"
                android:inputType="text"
                android:textColor="@color/black"
                tools:ignore="DuplicateIds">
            </EditText>
            <Button
                android:id="@+id/commentBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/comment2"
                tools:ignore="DuplicateIds">

            </Button>


        </RelativeLayout>
        <ImageView
            android:id="@+id/featured_image4"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/temel_park"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/featured_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temel Reis Parkı"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-medium"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4.6"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/featured_desc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İstasyonun yeşillikleri yanında çocukların oynayabileceği temiz düzenli bir park."/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/comment"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:hint="Yorum Yazınız:"
                android:inputType="text"
                android:textColor="@color/black"
                tools:ignore="DuplicateIds">
            </EditText>
            <Button
                android:id="@+id/commentBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/comment2"
                tools:ignore="DuplicateIds">

            </Button>


        </RelativeLayout>

        <ImageView
            android:id="@+id/featured_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/yayla_park"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/featured_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yayla Parkı"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-medium"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4.6"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/featured_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kırklareli'nin yüksek noktası. Tarihi dokuya sahip olması ve yerel şenliklerin yapılma yeri. bu bölgede Kırklareli'ne ait lezzetleri tadabilmek eşsiz bir deneyim. Hem şehrin havasından farklı, hem de şehre yatkın mesafede."/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/comment"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:hint="Yorum Yazınız:"
                android:inputType="text"
                android:textColor="@color/black"
                tools:ignore="DuplicateIds">
            </EditText>
            <Button
                android:id="@+id/commentBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/comment2"
                tools:ignore="DuplicateIds">

            </Button>


        </RelativeLayout>


    </LinearLayout>



</ScrollView>